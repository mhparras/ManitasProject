<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LearnActivity"
    android:background="@color/white"
    android:padding="20dp"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/log"
            android:background="@drawable/custom_image_logo"
            android:contentDescription="@string/txt_title">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@drawable/custom_activity_menu"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Números"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Colores"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animales"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vocales"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abecedario"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días de la Semana"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="meses del año"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saludos"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="básico"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="verbos"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="operaciones con numeros"
            android:textAlignment="center"
            android:background="@drawable/btn_layout_options"
            android:layout_margin="2dp"
            >
        </Button>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="volver"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"

            />

    </LinearLayout>

</LinearLayout>